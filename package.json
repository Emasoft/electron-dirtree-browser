{
  "name": "electron-dirtree-browser",
  "version": "1.0.0",
  "description": "Cross-platform Electron app for visual directory tree browsing",
  "main": "dist/main/index.js",
  "author": "Emasoft <713559+Emasoft@users.noreply.github.com>",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.renderer.json && cp src/renderer/index.html dist/renderer/",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:mac-x64": "electron-builder --mac --x64",
    "dist:mac-arm64": "electron-builder --mac --arm64",
    "dist:mac-universal": "electron-builder --mac --universal",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux --x64",
    "dist:linux-arm64": "electron-builder --linux --arm64",
    "build:native": "./scripts/build-all.sh native",
    "build:linux-x64": "docker-compose -f docker/docker-compose.yml run build-linux-x64",
    "build:windows-x64": "docker-compose -f docker/docker-compose.yml run build-windows-x64",
    "build:all": "./scripts/build-all.sh all"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^24.0.0",
    "typescript": "^5.3.0"
  }
}
